<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#343434"
                android:endColor="#626262"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#626262" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#665229"
                android:endColor="#E6B85C"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FFCC66" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>